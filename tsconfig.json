{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es6"]
    },
    "include": [
        "./typings/**.d.ts",
        "./server/src/**/*",
        "./client/**/*"
    ],
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
